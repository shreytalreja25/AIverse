# AIverse Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=5000
NODE_ENV=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Set to true to use MongoDB Atlas, false for local MongoDB
USE_ATLAS=false

# Local MongoDB connection string
MONGO_URI_LOCAL=mongodb://localhost:27017/AIverse

# MongoDB Atlas connection string (required if USE_ATLAS=true)
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGO_URI_ATLAS=

# ===========================================
# AUTHENTICATION
# ===========================================
# JWT secret for token signing (use a strong, random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ===========================================
# API CONFIGURATION
# ===========================================
# Base URL for API calls (usually auto-detected)
API_BASE_URL=http://localhost:5000

# Public base URL for generating absolute asset links
PUBLIC_BASE_URL=http://localhost:5000

# Production API URL (optional, used when NODE_ENV=production)
BASE_API_URL_PROD=

# Alternative fallback URLs (usually leave empty)
BACKEND_URL=
RENDER_EXTERNAL_URL=

# ===========================================
# AI SERVICE API KEYS
# ===========================================
# Google Gemini API Key (for AI content generation)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# OpenAI API Key (optional, for OpenAI services)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Hugging Face API Key (optional, for image generation)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=

# Hugging Face model for text-to-image generation
HF_TXT2IMG_MODEL=stabilityai/stable-diffusion-2

# ===========================================
# LOCAL AI SERVICES
# ===========================================
# Ollama/DeepSeek local server URL
OLLAMA_URL=http://127.0.0.1:11434

# ComfyUI configuration for image generation
COMFYUI_HOST=127.0.0.1
COMFYUI_PORT=8188

# ===========================================
# TEST CREDENTIALS (for development)
# ===========================================
# You can create test users through the API or use these example credentials
# Test Human User:
# Email: test@example.com
# Password: testpassword123
# Username: testuser

# Test AI User (will be created automatically by the system)
# The system generates AI users with random names and personalities

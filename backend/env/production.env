# Production environment variables for AIverse backend

# Server
PORT=5000
NODE_ENV=production

# Database
USE_ATLAS=true
MONGO_URI_LOCAL=mongodb://localhost:27017/AIverse
MONGO_URI_ATLAS=your_atlas_connection_string

# Auth
JWT_SECRET=please-set-a-strong-secret

# API Base URLs
# In production, API_BASE_URL resolves to BASE_API_URL_PROD automatically
BASE_API_URL_PROD=https://aiverse-sbs6.onrender.com
# Set if static assets (images) are served from a different domain/CDN
PUBLIC_BASE_URL=https://aiverse-sbs6.onrender.com

# CORS Configuration
CORS_ORIGIN=https://aiverse-opal.vercel.app
CORS_CREDENTIALS=true

# Optional alternative fallbacks (normally leave empty)
API_BASE_URL=
BACKEND_URL=
RENDER_EXTERNAL_URL=

# Third-party Keys
GEMINI_API_KEY=your_gemini_key
OPENAI_API_KEY=your_openai_key
HUGGINGFACE_API_KEY=your_hf_key
HF_TXT2IMG_MODEL=stabilityai/stable-diffusion-2

# Local AI/Imaging Services (usually not used in prod unless self-hosted)
OLLAMA_URL=http://127.0.0.1:11434
COMFYUI_HOST=127.0.0.1
COMFYUI_PORT=8188

# Development environment variables for AIverse backend

# Server
PORT=5000
NODE_ENV=development

# Database
USE_ATLAS=false
MONGO_URI_LOCAL=mongodb://localhost:27017/AIverse
MONGO_URI_ATLAS=

# Auth
JWT_SECRET=change-me

# API Base URLs
# API_BASE_URL defaults to http://localhost:PORT, but can be set explicitly
API_BASE_URL=http://localhost:5000
# For local dev, assets are served by the same backend
PUBLIC_BASE_URL=http://localhost:5000

# Optional alternative fallbacks (normally leave empty)
BACKEND_URL=
RENDER_EXTERNAL_URL=

# Third-party Keys (leave empty if not used locally)
GEMINI_API_KEY=
OPENAI_API_KEY=
HUGGINGFACE_API_KEY=
HF_TXT2IMG_MODEL=stabilityai/stable-diffusion-2

# Local AI/Imaging Services
OLLAMA_URL=http://127.0.0.1:11434
COMFYUI_HOST=127.0.0.1
COMFYUI_PORT=8188
